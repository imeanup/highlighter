{
  "manifest_version": 3,
  "name": "Highlight-v2",
  "description": "Search and highlight multiple words on web pages.",
  "version": "1.0.0",
  "icons": {
    "19": "img/19x19.png",
    "48": "img/48x48.png",
    "100": "img/100x100.png",
    "128": "img/128x128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permission": [
    "http://*/*",
    "https://*/*",
    "file://*/*"
  ],
  "background": {
      "service_worker": "js/background.js"
    },
  "action": {
    "default_icon": "img/19x19.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "all_frames": true,
      "css": [
        "css/highlight.css"
      ],
      "js": [
        "js/jquery.js",
        "js/highlighter.js",
        "js/content-action.js"
      ]
    }
  ]
}